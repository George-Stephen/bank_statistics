<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DashboardActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="70dp">
            <Button
                android:id="@+id/inventory_activity"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="View Inventory"
                android:paddingTop="40sp"
                android:drawablePadding="-20sp"
                android:drawableTop="@drawable/baseline_apps_white_24dp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:background="@drawable/button_round"/>
            <Button
                android:id="@+id/app_activity"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="View Applications"
                android:drawableTop="@drawable/baseline_style_white_24dp"
                android:textAllCaps="false"
                android:paddingTop="40sp"
                android:drawablePadding="-20sp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_round"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/order_activity"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:textAllCaps="false"
                android:text="View Orders"
                android:paddingTop="40sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:drawablePadding="-20sp"
                android:drawableTop="@drawable/baseline_hourglass_bottom_white_24dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_round"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>